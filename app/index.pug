doctype html

html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')

    link(rel='stylesheet', href='css/style.min.css')

    title= title

  body.homepage
    section.profile
      span.yours-truly= person
      ul.profile-links
        each link in profileLinks
          li.profile-links__item
            a(href=link.href, class=['profile-links__link', link.class])
              img(src=link.image.src, alt=link.image.altText)

