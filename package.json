{
  "name": "audri.us",
  "description": "audri.us website",
  "version": "3.1.0",
  "private": true,
  "author": "Audrius Lubys",
  "scripts": {
    "buildmarkup": "pug -D -P -O env.js -o dist app/index.pug",
    "buildcss": "node-sass --output-style compressed app/scss/main.scss dist/style.min.css",
    "copyfiles": "cp -r app/fonts dist && cp -r app/img dist",
    "build": "yarn buildmarkup && yarn buildcss && yarn copyfiles",
    "start": "yarn build && http-server dist -o",
    "watch": "watch 'yarn build' app"
  },
  "devDependencies": {
    "dotenv": "^5.0.1",
    "http-server": "^0.11.1",
    "node-sass": "^4.8.3",
    "pug-cli": "^1.0.0-alpha6",
    "watch": "^1.0.2"
  }
}
