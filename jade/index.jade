doctype html

html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')

    link(rel='stylesheet', href='css/style.min.css')

    title= title

  body
    div.vertical-wrapper
      header
        h1.title= title

      div.main-content

        ul.links
          each link in profileLinks
            li
              a(href=link.href)
                img(src=link.image.src, alt=link.image.altText)
                span= link.title
